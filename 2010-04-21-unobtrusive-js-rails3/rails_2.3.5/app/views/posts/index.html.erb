<h1>Listing posts</h1>

<% @posts.each do |post| %>
  <% div_for post do %>
    <%= post.title %><br/>
    <%= post.body %><br/>
    <%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %> |
    <%= button_to_remote "Remote Destroy", :url  => post_path(post), :confirm => 'Are you sure?', :method => :delete %>
 	<% end %>
<% end %>

<%= link_to 'New post', new_post_path %>